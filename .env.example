# ==============================================
# Polymarket Arbitrage Bot Configuration
# ==============================================
# Copy this file to .env and fill in your actual values

# ------------------
# Database Configuration
# ------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=polymarket
POSTGRES_PASSWORD=polymarket_password
POSTGRES_DB=polymarket_trading
DATABASE_URL=postgresql+asyncpg://polymarket:polymarket_password@localhost:5432/polymarket_trading

# ------------------
# Redis Configuration
# ------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379/0

# ------------------
# Polymarket API
# ------------------
# Get credentials from https://polymarket.com/
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_PRIVATE_KEY=your_ethereum_private_key_here
POLYMARKET_CHAIN_ID=137  # Polygon mainnet
POLYMARKET_CLOB_API_URL=https://clob.polymarket.com

# ------------------
# Exchange APIs
# ------------------
# Bybit (no auth needed for public data)
# Get API keys from https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=optional_for_advanced_features
BYBIT_API_SECRET=optional_for_advanced_features

# Coinbase (no auth needed for public data)
COINBASE_API_KEY=optional
COINBASE_API_SECRET=optional

# ------------------
# Risk Management
# ------------------
INITIAL_CAPITAL=10000
MAX_POSITION_SIZE_PCT=0.02  # 2% per trade
MAX_POSITION_SIZE_ABS=200  # $200 max
MAX_CONCURRENT_POSITIONS=5
MAX_EXPOSURE_PCT=0.20  # 20% max deployed
MAX_DAILY_LOSS_PCT=0.05  # 5% max daily loss
MAX_DRAWDOWN_PCT=0.15  # 15% max drawdown
MAX_CONSECUTIVE_LOSSES=5
KELLY_MULTIPLIER=0.25  # 1/4 Kelly

# ------------------
# Trading Strategy
# ------------------
ENTRY_DELAY_MIN=3  # minutes
ENTRY_DELAY_MAX=5  # minutes
MIN_MOMENTUM_THRESHOLD=0.003  # 0.3% price change
MIN_EDGE_THRESHOLD=0.15  # 15% EV
MOMENTUM_CONSISTENCY_THRESHOLD=0.70  # RÂ² score
MIN_LIQUIDITY=100  # $100 minimum orderbook depth

# ------------------
# Monitoring & Alerting
# ------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Discord Webhook (for alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ------------------
# Application Settings
# ------------------
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DRY_RUN_MODE=true  # Set to false for real trading
API_PORT=8000

# ------------------
# GitHub (for automation/CI)
# ------------------
GITHUB_TOKEN=your_github_personal_access_token

# ------------------
# Feature Flags
# ------------------
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=true
ENABLE_TELEGRAM_ALERTS=false
ENABLE_DISCORD_ALERTS=false
ENABLE_PROMETHEUS_METRICS=true

# ------------------
# Performance Tuning
# ------------------
WEBSOCKET_RECONNECT_DELAY=5  # seconds
API_RATE_LIMIT_PER_SECOND=10
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50
